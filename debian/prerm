#!/bin/sh
set -e

# Stop the service before removal
if [ "$1" = "remove" ] || [ "$1" = "deconfigure" ]; then
    if systemctl is-active --quiet mcp.service; then
        echo "Stopping Distiller MCP Hub service..."
        systemctl stop mcp.service
    fi
    
    if systemctl is-enabled --quiet mcp.service; then
        echo "Disabling Distiller MCP Hub service..."
        systemctl disable mcp.service
    fi
    
    # Reload systemd
    systemctl daemon-reload
fi

#DEBHELPER# 